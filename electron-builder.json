{
	"appId": "com.tivolicloud.launcher",
	"productName": "Tivoli Cloud VR",
	"asar": true,
	"protocols": {
		"name": "Tivoli Cloud VR",
		"schemes": ["tivoli"],
		"role": "Viewer"
	},
	"publish": [
		{
			"provider": "generic",
			"url": "https://cdn.tivolicloud.com/releases/launcher",
			"useMultipleRangeRequest": false
		}
	],
	"win": {
		"artifactName": "TivoliCloudVRLauncher-${version}.${ext}",
		"target": "nsis",
		"icon": "assets/icon.ico"
	},
	"nsis": {
		"oneClick": true,
		"perMachine": false
	},
	"linux": {
		"artifactName": "TivoliCloudVRLauncher-${version}.${ext}",
		"target": ["AppImage"],
		"icon": "assets/icon.icns",
		"category": "Game"
	},
	"deb": {
		"packageCategory": "games",
		"depends": [
			"libgtk-3-0",
			"libnotify4",
			"libnss3",
			"libxss1",
			"libxtst6",
			"xdg-utils",
			"libatspi2.0-0",
			"libuuid1",
			"libappindicator3-1",
			"libsecret-1-0",
			"libopengl0"
		]
	},
	"files": ["out", "electron/dist", "assets", "!assets/private"]
}
