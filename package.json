{
	"name": "tivoli-cloud",
	"author": "Tivoli Cloud VR, Inc.",
	"version": "0.0.17",
	"description": "Tivoli Cloud Launcher",
	"main": "electron/dist/main.js",
	"scripts": {
		"build:electron": "tsc --p electron",
		"build:angular": "ng build --prod",
		"build": "npm run build:angular && npm run build:electron",
		"dist": "electron-builder",
		"electron": "tsc --p electron && cross-env DEV=true electron .",
		"format": "prettier --write **/*.ts **/*.json **/*.html **/*.scss",
		"start": "ng build --watch"
	},
	"build": {
		"appId": "com.tivolicloud.launcher",
		"productName": "Tivoli Cloud",
		"asar": false,
		"protocols": {
			"name": "tivoli-cloud",
			"schemes": [
				"tivoli"
			]
		},
		"publish": [
			{
				"provider": "generic",
				"url": "https://cdn.tivolicloud.com/releases"
			}
		],
		"win": {
			"artifactName": "tivoli-cloud-setup.exe",
			"target": "nsis",
			"icon": "assets/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"runAfterFinish": true,
			"installerSidebar": "assets/installer-sidebar.bmp"
		},
		"mac": {
			"artifactName": "tivoli-cloud.${ext}",
			"target": [
				"dmg",
				"zip"
			],
			"icon": "assets/icon.icns",
			"category": "public.app-category.games"
		},
		"dmg": {
			"background": "assets/dmg.png",
			"title": "Tivoli Cloud",
			"contents": [
				{
					"x": 170,
					"y": 190
				},
				{
					"x": 370,
					"y": 190,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"files": [
			"out",
			"electron/dist",
			"interface/**/*"
		]
	},
	"dependencies": {
		"@opentok/client": "^2.16.3",
		"discord-rpc": "^3.1.0",
		"electron-updater": "^4.2.0",
		"node-fetch": "^2.6.0",
		"socket.io-client": "^2.3.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~0.803.19",
		"@angular/animations": "^8.2.14",
		"@angular/cdk": "~8.2.3",
		"@angular/cli": "~8.3.19",
		"@angular/common": "~8.2.14",
		"@angular/compiler": "~8.2.14",
		"@angular/compiler-cli": "~8.2.14",
		"@angular/core": "~8.2.14",
		"@angular/forms": "^8.2.14",
		"@angular/language-service": "~8.2.14",
		"@angular/material": "^8.2.3",
		"@angular/platform-browser": "~8.2.14",
		"@angular/platform-browser-dynamic": "~8.2.14",
		"@angular/router": "~8.2.14",
		"@auth0/angular-jwt": "^3.0.1",
		"@types/dom-mediacapture-record": "^1.0.2",
		"@types/electron": "^1.6.10",
		"@types/node": "^8.9.5",
		"@types/node-fetch": "^2.5.3",
		"@types/socket.io-client": "^1.4.32",
		"cross-env": "^6.0.3",
		"electron": "^7.1.1",
		"electron-builder": "^22.1.0",
		"hammerjs": "^2.0.8",
		"prettier": "^1.19.1",
		"rxjs": "~6.5.3",
		"ts-node": "~7.0.0",
		"tslib": "^1.10.0",
		"tslint": "~5.15.0",
		"typescript": "~3.5.3",
		"zone.js": "~0.9.1"
	}
}
